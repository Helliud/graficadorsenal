<Window x:Class="GraficadorSenales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraficadorSenales"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-0.4,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="726*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="26,26,0,0" TextWrapping="Wrap" Text="Amplitud" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtAmplitud" HorizontalAlignment="Left" Height="23" Margin="26,60,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.45,-0.704"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,105,0,0" TextWrapping="Wrap" Text="Fase" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtFase" HorizontalAlignment="Left" Height="23" Margin="26,139,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.45,-0.704" />
        <TextBlock HorizontalAlignment="Left" Margin="237,109,0,0" TextWrapping="Wrap" Text="Frecuencia" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtFrecuencia" HorizontalAlignment="Left" Height="23" Margin="237,139,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.45,-0.704"/>
        <TextBlock HorizontalAlignment="Left" Margin="237,26,0,0" TextWrapping="Wrap" Text="Tiempo inicial" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtTiempoInicial" HorizontalAlignment="Left" Height="23" Margin="237,60,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.45,-0.704" TextChanged="txtTiempoInicial_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="419,26,0,0" TextWrapping="Wrap" Text="Tiempo final" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtTiempoFinal" HorizontalAlignment="Left" Height="23" Margin="419,60,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.45,-0.704" TextChanged="txtTiempoFinal_TextChanged" />
        <TextBlock HorizontalAlignment="Left" Margin="419,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18"><Run Text="Frecuencia de "/><LineBreak/><Run Text="muestreo"/></TextBlock>
        <TextBox x:Name="txtMuestreo" HorizontalAlignment="Left" Height="23" Margin="419,139,0,0" TextWrapping="Wrap" Text="1000" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.45,-0.704" />
        <Button Content="Graficar Señal Senoidal" HorizontalAlignment="Left" Margin="603,26,0,0" VerticalAlignment="Top" Width="173" Height="44" Click="Button_Click" Grid.ColumnSpan="2" />
        <ScrollViewer x:Name="scrContenedor" HorizontalAlignment="Left" Height="229" Margin="0,190,-0.4,0" VerticalAlignment="Top" Width="794" Grid.ColumnSpan="3" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
            <Polyline Stroke="Black" StrokeThickness="2" Name="plnGrafica"></Polyline>
        </ScrollViewer>
        <Button x:Name="btnGraficasRampa" Content="Graficar Rampa" HorizontalAlignment="Left" Margin="603,78,0,0" VerticalAlignment="Top" Width="173" Height="44" Click="btnGraficasRampa_click" Grid.ColumnSpan="2" />


    </Grid>
</Window>
